<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;netstandard2.0</TargetFrameworks>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Cake.Unity3D</PackageId>
    <Title>Cake.Unity3D</Title>
    <Summary>Unity3D addon for cake build.</Summary>
    <Description>Cake Build addon for Unity3D.</Description>
    <PackageTags>Cake Script Build</PackageTags>
    <Authors>Redth</Authors>
    <Owners>Redth</Owners>
    <PackageProjectUrl>https://github.com/samoatesgames/Cake.Unity3D</PackageProjectUrl>
    <PackageIconUrl>https://cdn.jsdelivr.net/gh/cake-contrib/graphics/png/cake-contrib-medium.png</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/samoatesgames/Cake.Unity3D/master/LICENSE.md</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\AutomatedBuild.template" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\AutomatedBuild.template" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Resources\AssemblyDefinition.template" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\AssemblyDefinition.template" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Core" Version="0.33.0" PrivateAssets="All" />
    <PackageReference Include="Cake.Common" Version="0.33.0" PrivateAssets="All" />
  </ItemGroup>
 
</Project>
